{
  "name": "@pelagornis/prompt-guide",
  "version": "1.0.0",
  "description": "Initialize prompt-guide in any project: pick platform, copy config, set .gitignore",
  "type": "module",
  "bin": {
    "prompt-guide": "./bin/cli.js"
  },
  "keywords": [
    "prompt-guide",
    "cursor",
    "ai",
    "scaffold"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "bin",
    "dist",
    "ai",
    "docs",
    "prompts"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "copy-templates": "node scripts/copy-templates.cjs",
    "prepublishOnly": "npm run copy-templates && npm run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "figlet": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
